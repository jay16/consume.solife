.row{style:"margin-top:50px;"}
  .col-sm-6.col-sm-offset-3
    %h1{style: "text-align:center;margin-top:70px;margin-bottom:15px;"}
      修改登陆密码

:css
  .controls { margin-bottom: 10px; }

.row{style:"margin-top:50px;"}
  .col-sm-4.col-sm-offset-4
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification

      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token

      .form-inputs
        = f.input :password, label: false, wrapper: :prepend, input_html: { class: "input-group" } do 
          %span.input-group-addon 登陆密码
          = f.input_field :password, class: "form-input form-control", autofocus: true

        = f.input :password_confirmation, label: false, wrapper: :prepend, input_html: { class: "input-group" } do 
          %span.input-group-addon 确认密码
          = f.input_field :password_confirmation, class: "form-input form-control"

        = f.button :submit, "Change my password", class: "hidden", id: "resetSubmit"

        = link_to "", class: "btn btn-default btn-primary", onclick: "$('#resetSubmit').trigger('click');", "data-toggle" => "tooltip", "data-original-title" => "提交修改密码", style: "float:right;" do
          %i.glyphicon.glyphicon-arrow-right

    - render "devise/shared/links"
