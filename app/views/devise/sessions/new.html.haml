:css
  .form-input {
    color: #565656;
    height: 53px;
    padding: 0px 15px;
    border: none;
    transition: all 0.2s ease-in-out;
    font-size: 18px;
    margin-bottom: 5px;
    border-radius: 5px;
  }
.row{style:"margin-top:50px;"}
  .col-sm-4.col-sm-offset-4
    .row
      .col-sm-10.col-sm-offset-1
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-inputs
            = f.input :email, required: false, autofocus: true, label: false, input_html: { class: "col-sm-12 form-input form-control" }, placeholder: "用户邮箱"
            = f.input :password, required: true, label: false, input_html: { class: "col-sm-8 form-input form-control", style: "width:80%;border-radius: 5px 0px 0px 5px;" }, wrapper_html: { style: "display: inline;" }, placeholder: "登陆密码"
            - f.input :remember_me, as: :boolean if devise_mapping.rememberable?
            = f.button :submit, "登 陆", label: false, class: "hidden", id: "loadSubmit"
            = link_to "", id: "loadTrigger", onclick: "$('#loadSubmit').trigger('click');", class: "btn btn-primary", style: "height:53px;width:20%; border-radius: 0px 5px 5px 0px;" do
              %i.glyphicon.glyphicon-arrow-right{style: "margin-top: 12px;"}

        - render "devise/shared/links"
    :javascript
      $(function(){
          function inputMonitor() {
              var isDisabled = false;
              $("input").each(function(){
                  if(!$.trim($(this).val()).length) isDisabled = true;
              })
              console.log(isDisabled);
              if(isDisabled == true)
                  $("#loadTrigger").attr("disabled", "disabled");
              else
                  $("#loadTrigger").removeAttr("disabled");
          }

          inputMonitor();
          $("input").bind("onchange keyup input", function(){
              inputMonitor();
          });
      });

